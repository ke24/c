        "import random\n",
        "print(\"welcome to Number Guessing Game\")\n",
        "Number=random.randint(1,10)\n",
        "chance=0\n",
        "\n",
        "while chance<3:\n",
        "    guess=int(input(\"Enter your GUess between 1-10\"))\n",
        "    if(guess==Number):\n",
        "        print(\"Congratulations you won!!\")\n",
        "    elif(guess<Number):\n",
        "        print(\"Your Guess is too low. Try higher Number\")\n",
        "    else:\n",
        "        print(\"Your Guess is too high. Try low Number\")\n",
        "    chance+=1\n",
        "\n",
        "if not chance <3:\n",
        "    print(\"You lose! The Number is:\",Number)"
